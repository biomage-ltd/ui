    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to running process",
            "type": "node",
            "request": "attach",
            "processId": "${command:PickProcess}"
        },
        {
            "name": "Test and debug",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "test"]
        },          
    ]
}